<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <!--this is the connection information, transaction type should be JTA if it's a webapp, and if you're using a server like glassfish since it has a built in transaction manager-->
    <persistence-unit name="book_PU" transaction-type="JTA">
        <!--put in your JDBC resource name-->
    <jta-data-source>jdbc/book</jta-data-source>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties/>
  </persistence-unit>
</persistence>
